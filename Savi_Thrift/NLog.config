<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  autoReload="true"
	  internalLogLevel="Info"
	  internalLogFile="C:\Users\HP\OneDrive\Desktop\SAVI Api\Savi_SQ017_GROUPB_BE\Savi_Thrift.txt">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<targets>
		<variable name="logDirectory" value="logs/${shortdate}" />
		<target name="file1" xsi:type="File" fileName="${logDirectory}/file1.txt" />
		<target name="console" xsi:type="Console" />
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<!-- All logs, including from Microsoft -->
		<logger name="*" minlevel="Trace" writeTo="file1" />
		<logger name="*" minlevel="Error" writeTo="console" />

		<!-- Output hosting lifetime message to console target for faster start -->
		<logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="console" />

		<!-- Skip non-critical Microsoft Logs and so log only own logs (BlackHole) -->
		<logger name="Microsoft.*" maxlevel="Info" final="true" />
		<logger name="System.Net.Http.*" maxlevel="Info" final="true" />
	</rules>
</nlog>
